extends ../layout.pug
block content
    h1 Can I help you? :)
    form(action="/users/find", method="GET")
      input#input(type='text', name='q')
      button#bts Find
    ul
      each user in users
        li
          span=user.name
          span &nbsp
          span &nbsp
          
          a(href="/users/detail/" +user.id) Detail
    script.
      var input = document.getElementById("input");
      var button = document.getElementById("bts");
      button.addEventListener("click", function(){
      sessionStorage.setItem("d1", input.value)
      });
      input.value=sessionStorage.getItem("d1");